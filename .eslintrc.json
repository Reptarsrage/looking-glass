{
  "extends": "erb",
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "configs/webpack.config.eslint.js"
      }
    }
  },
  "rules": {
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "react/forbid-prop-types": 0,
    "react/no-did-update-set-state": 0,
    "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["draft"] }]
  }
}
