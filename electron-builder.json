{
  "$schema": "https://json.schemastore.org/electron-builder.json",
  "productName": "The Looking-Glass",
  "appId": "looking-glass",
  "files": ["dist_main", "dist_renderer"],
  "directories": {
    "buildResources": "assets"
  },
  "mac": {
    "category": "public.app-category.entertainment",
    "target": ["dmg"]
  },
  "win": {
    "target": ["nsis"]
  },

  "linux": {
    "target": ["deb"],
    "category": "Utility"
  },
  "publish": {
    "provider": "github",
    "owner": "reptarsrage",
    "repo": "looking-glass",
    "private": false
  }
}
